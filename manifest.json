{
	"manifest_version": 2,
	"name": "Play with Kodi",
	"version": "0.1",
	"description": "Allow to play video on a page with Kodi (formerly XBMC)",
	"author": "Benoit BLANCHON",
	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"options_page": "options.html",
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["contentScript.js"]
		}
	],
	"page_action": {
		"default_icon": {
			"19": "icon19.png",
			"38": "icon38.png"
		},
		"default_title": "Play with Kodi",
		"default_popup": "popup.html"
	},
	"permissions": [
		"storage",
		"http://*/jsonrpc",
		"https://*/jsonrpc"
	]
}
